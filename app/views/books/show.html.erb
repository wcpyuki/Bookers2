
<div class="body">
<div class="container">

<div class="row">

<%= render 'users/list', book: @booku, user: @book.user %>


  <div class="col-xs-9">
    <h2>Book detail</h2>

    <table class="table table-hover table-inverse">

  <tbody>
      <tr>
        <td>
          <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "30x30" %><br>
          <%= link_to @book.user.name, user_path(@book.user) %>
        </td>
        <td>
          <%= link_to @book.title, book_path(@book) %>
        </td>
        <td>
          <%= @book.body %>
        </td>
        <% if current_user == @book.user %>
        <td>
          <%= link_to "Edit",edit_book_path(@book) %>
        </td>
        <td>
          <%= link_to "Destroy",book_path(@book), method: :delete, data: { confirm: '削除しますか？' } %>
        </td>
        <% end %>
      </tr>
  </tbody>
</table>
  </div>
</div>

      </div>
    </div>

